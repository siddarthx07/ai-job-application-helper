{
  "manifest_version": 3,
  "name": "ApplySmart",
  "version": "1.1.0",
  "description": "Smart AI cover letter generator and resume tailor for job applications",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost:3000/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["config/config.js", "content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  
  "action": {
    "default_title": "ApplySmart",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "vendor/pdfjs/*"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}
